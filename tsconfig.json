{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",

        "strict": true,

        "declaration": false,
        "rootDir": "src/",

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "lib": ["ES2022", "DOM"],
        "moduleResolution" : "bundler",

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/*"]
}
